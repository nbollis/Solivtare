<UserControl x:Class="SolvitaireGUI.GeneticAlgorithmTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolvitaireGUI"
             xmlns:solvitaireGenetics="clr-namespace:SolvitaireGenetics;assembly=SolvitaireGenetics"
             d:DataContext="{x:Static local:GeneticAlgorithmTabModel.Instance}"
             mc:Ignorable="d" 
             Name="GeneticsTab"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid AllowDrop="True"
          Drop="ParametersExpander_OnDrop"
          DragOver="ParametersExpander_DragOver"
          Background="{StaticResource BackgroundColor}"
          >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Algorithm Type Selection -->
        
        <Expander Header="Parameters" ExpandDirection="Left" >
            <DockPanel>

                <GroupBox Header="Algorithm Parameters" DockPanel.Dock="Top" BorderBrush="{StaticResource BorderColor}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10" DockPanel.Dock="Top" >
                            <TextBlock Text="Algorithm Type:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox ItemsSource="{Binding AlgorithmTypes}" 
                                      SelectedItem="{Binding SelectedAlgorithmType}" 
                                      Width="150"/>
                        </StackPanel>

                        <Grid DataContext="{Binding Parameters}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200" />
                                <!-- Label column -->
                                <ColumnDefinition Width="*" />
                                <!-- Input column -->
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!-- Output Directory -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Output Directory:" VerticalAlignment="Center" Margin="5" />
                            <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"  
                                     TextAlignment="Right"
                                     Text="{Binding OutputDirectory}" Margin="5"
                                     Style="{StaticResource TextBoxStyle}" MinWidth="240"/>

                            <!-- Population Size -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Population Size:" VerticalAlignment="Center" Margin="5" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PopulationSize}" Margin="5"
                                     Style="{StaticResource TextBoxStyle}" />

                            <!-- Generations -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Generations:" VerticalAlignment="Center" Margin="5" />
                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Generations}" Margin="5"
                                     Style="{StaticResource TextBoxStyle}" />

                            <!-- Mutation Rate -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Mutation Rate:" VerticalAlignment="Center" Margin="5" />
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding MutationRate}" Margin="5"
                                     Style="{StaticResource TextBoxStyle}" />

                            <!-- Tournament Size -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Tournament Size:" VerticalAlignment="Center" Margin="5" />
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding TournamentSize}" Margin="5"
                                     Style="{StaticResource TextBoxStyle}" />
                        </Grid>

                    </StackPanel>

                    

                </GroupBox>

                <GroupBox Header="Specific Parameters" DockPanel.Dock="Top" BorderBrush="{StaticResource BorderColor}">
                    <!-- Dynamically load the relevant control -->
                    <ContentControl Content="{Binding Parameters}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type solvitaireGenetics:SolitaireGeneticAlgorithmParameters}">
                                <local:SolitaireGeneticParametersControl />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type solvitaireGenetics:QuadraticGeneticAlgorithmParameters}">
                                <local:QuadraticGeneticParametersControl />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </GroupBox>

                <!-- Run Button -->
                <Button DockPanel.Dock="Bottom" Content="Run Algorithm" Style="{StaticResource RoundedButtonStyle}"
                        Background="{StaticResource GreenAccentColor}" Width="120" MaxHeight="50"
                        IsEnabled="{Binding IsAlgorithmRunning, Converter={StaticResource InverseBooleanConverter}}"
                        Command="{Binding RunAlgorithmCommand }" 
                        Margin="5" />
            </DockPanel>
        </Expander>
        

        <TabControl Grid.Column="1" Grid.ColumnSpan="2">

            <TabItem Header="Run Algorithm">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" Content="{Binding FitnessByGeneration}"/>
                    <ContentControl Grid.Row="1" Content="{Binding AverageStatByGeneration}"/>
                </Grid>
            </TabItem>
        </TabControl>
        

    </Grid>
</UserControl>
