<UserControl x:Class="SolvitaireGUI.ConnectFourPlayingView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:local="clr-namespace:SolvitaireGUI"
            d:DataContext="{x:Static local:ConnectFourPlayingModel.Instance}"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800">
   <UserControl.Resources>
        <local:PlayerToBrushConverter x:Key="PlayerToBrushConverter" />
        <local:PreviewTokenVisibilityConverter x:Key="PreviewTokenVisibilityConverter" />
        <local:PlayerTypeAgentModeToVisibilityConverter x:Key="PlayerTypeAgentModeToVisibilityConverter" />
        <local:PlayerTypeHumanModeToVisibilityConverter x:Key="PlayerTypeHumanModeToVisibilityConverter" />
        <local:FlatIndexToColumnConverter x:Key="FlatIndexToColumnConverter" />
    </UserControl.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <!-- Left Panel: Player 1 -->
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Player 1" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <ComboBox ItemsSource="{Binding AvailableAgents}" 
                     SelectedItem="{Binding Player1Agent}" 
                     DisplayMemberPath="Name"
                     Margin="0,0,0,10"/>
            <Button Content="Switch to Human" Command="{Binding SwitchPlayer1ToHumanCommand}" 
                    Visibility="{Binding Player1Type, Converter={StaticResource PlayerTypeAgentModeToVisibilityConverter}}"/>
            <Button Content="Switch to Agent" Command="{Binding SwitchPlayer2ToAgentCommand}" 
                    Visibility="{Binding Player1Type, Converter={StaticResource PlayerTypeHumanModeToVisibilityConverter}}"/>
            <!-- Additional agent settings can go here -->
        </StackPanel>

        <!-- Top Panel: Game Controls -->
        <Grid Grid.Row="0" Grid.Column="1"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Content="⇄ Swap Players" Style="{StaticResource RoundedButtonStyle}"
                    Command="{Binding SwapPlayersCommand}" 
                    HorizontalAlignment="Center" Width="120" Margin ="5"/>

            <Button Grid.Row="1"  Content="Reset Game" Style="{StaticResource RoundedButtonStyle}"
                    Command="{Binding ResetGameCommand}" 
                    HorizontalAlignment="Center" Width="80" Margin ="5"/> 
        </Grid>

        <!-- Center Panel: Game Board -->
        <ItemsControl Grid.Column="1" Grid.Row="1"
                      ItemsSource="{Binding GameStateViewModel.FlatBoardCells}"
                      AlternationCount="42">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="6" Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="Blue"
                            MouseEnter="Cell_MouseEnter"
                            MouseLeave="Cell_MouseLeave"
                            MouseLeftButtonUp="Cell_MouseLeftButtonUp"
                            Tag="{Binding (ItemsControl.AlternationIndex), 
                                      RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                      Converter={StaticResource FlatIndexToColumnConverter}}">
                        <Ellipse Width="40" Height="40"
                                 Fill="{Binding ., Converter={StaticResource PlayerToBrushConverter}}"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Right Panel: Player 2 -->
        <StackPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Player 2" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <ComboBox ItemsSource="{Binding AvailableAgents}" 
                  SelectedItem="{Binding Player2Agent}" 
                  DisplayMemberPath="Name"
                  Margin="0,0,0,10"/>
            <Button Content="Switch to Human" Command="{Binding SwitchPlayer2ToHumanCommand}" 
                    Visibility="{Binding Player2Type, Converter={StaticResource PlayerTypeAgentModeToVisibilityConverter}}"/>
            <Button Content="Switch to Agent" Command="{Binding SwitchPlayer2ToAgentCommand}" 
                    Visibility="{Binding Player2Type, Converter={StaticResource PlayerTypeHumanModeToVisibilityConverter}}"/>
            <!-- Additional agent settings can go here -->
        </StackPanel>
    </Grid>
</UserControl>
