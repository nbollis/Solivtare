<UserControl x:Class="SolvitaireGUI.AgentPlayingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolvitaireGUI"
             xmlns:solvitaireGuiFunctions="clr-namespace:SolvitaireGuiFunctions;assembly=SolvitaireGuiFunctions"
             mc:Ignorable="d" 
             d:DataContext="{x:Static local:AgentPlayingModel.Instance}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel HorizontalAlignment="Left" Width="400">
                <Button Content="Make Move" 
                        Command="{Binding MakeMoveCommand}" />
                <Button Content="Reset Game" 
                        Command="{Binding ResetGameCommand}" />
                <Button Content="New Game" 
                        Command="{Binding NewGameCommand}" />

                <ListView x:Name="LegalMovesListView" VerticalAlignment="Stretch"  
                         ItemsSource="{Binding LegalMoves}"  
                         SelectedItem="{Binding SelectedMove, Mode=TwoWay}"/>  
                <Button Content="Make Specific Move"  
                       Command="{Binding MakeSpecificMoveCommand}"  
                       CommandParameter="{Binding SelectedItem, ElementName=LegalMovesListView}"/>

                <Button Content="Start Agent" Command="{Binding StartAgentCommand}"></Button>

            </StackPanel>
        </Grid>

        <ContentControl Grid.Column="1">
            <local:GameStateView DataContext="{Binding GameStateViewModel}"/>
        </ContentControl>
    </Grid>
</UserControl>
